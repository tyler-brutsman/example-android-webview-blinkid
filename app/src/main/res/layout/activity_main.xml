<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main">

    <!-- Button for starting the verification process -->
    <Button
        android:id="@+id/startVerificationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Verification"
        android:layout_centerInParent="true" />

    <!-- WebView for loading content after permissions are granted -->
    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/startVerificationButton"
        android:visibility="gone" />
</RelativeLayout>